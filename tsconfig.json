{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "packages",
    "noEmit": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ],
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true
  },
  "exclude": ["node_modules/**/*"]
}